---
- host:all
  become:true
  tasks:
  - name: Install Apache2 on ununtu
    apt: name=apache2 state=present
    when: ansible_os_family=="Debian"
    ignore_errors: true

  - name: Install httpd on RedHat
    apt: name+httpd state:present
    when: ansible_os_family=="RedHat"
    ignore_errors: True
